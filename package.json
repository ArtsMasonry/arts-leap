{
  "name": "arts-leap",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:frontend": "npm run -w ./frontend dev",
    "dev:backend": "npm run -w ./backend dev",
    "build": "npm-run-all -s build:*",
    "build:frontend": "npm run -w ./frontend build",
    "build:backend": "npm run -w ./backend build",
    "start": "npm-run-all -p start:*",
    "start:frontend": "npm run -w ./frontend start",
    "start:backend": "npm run -w ./backend start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
